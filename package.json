{
  "name": "dungeons-and-components",
  "version": "0.5.0",
  "description": "A React component library for Dungeons and Dragons.",
  "author": "Christopher Baker <christpher@hmudesign.com>",
  "license": "MIT",
  "homepage": "https://github.com/HMUDesign/dungeons-and-components#readme",
  "bugs": {
    "url": "https://github.com/HMUDesign/dungeons-and-components/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "eslint": "eslint .",
    "depcheck": "depcheck .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib",
    "build": "npm run clean && tsc",
    "build:storybook": "npm run build && build-storybook -o public && gh-pages -m 'Updates [ci skip]' -d public",
    "dev": "npm run clean && tsc  --watch",
    "dev:storybook": "start-storybook -p 6006",
    "release:major": "npm version major && git push && git push --tags && npm publish",
    "release:minor": "npm version minor && git push && git push --tags && npm publish",
    "release:patch": "npm version patch && git push && git push --tags && npm publish",
    "release:pre": "npm version prerelease && git push && git push --tags && npm publish --tag=pre",
    "prepare": "npm run build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hmudesign/eslint-config/config-ts",
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@hmudesign/eslint-config": "^1.7.0",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "depcheck": "^1.4.1",
    "eslint": "^7.28.0",
    "gh-pages": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.2"
  }
}
