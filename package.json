{
  "name": "dungeons-and-components",
  "version": "0.5.0",
  "description": "A React component library for Dungeons and Dragons.",
  "author": "Christopher Baker <christpher@dmyetti.com>",
  "license": "MIT",
  "homepage": "https://dmyetti.github.io/dungeons-and-components/",
  "bugs": {
    "url": "https://github.com/dmyetti/dungeons-and-components/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "eslint": "eslint .",
    "depcheck": "depcheck .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf _coverage _storybook lib",
    "build": "npm run clean && npm run build:typescript && npm run build:babel && npm run build:storybook",
    "build:typescript": "tsc",
    "build:babel": "babel --copy-files --out-dir lib --extensions .ts,.tsx src",
    "build:storybook": "build-storybook -o _storybook",
    "dev": "npm run clean && (npm run dev:typescript & npm run dev:babel)",
    "dev:typescript": "tsc --watch",
    "dev:babel": "babel --copy-files --out-dir lib --extensions .ts,.tsx --watch src",
    "dev:storybook": "start-storybook -p 6006",
    "release:major": "npm version major && git push && git push --tags && npm publish",
    "release:minor": "npm version minor && git push && git push --tags && npm publish",
    "release:patch": "npm version patch && git push && git push --tags && npm publish",
    "release:pre": "npm version prerelease && git push && git push --tags && npm publish --tag=pre",
    "prepare": "npm run build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@hmudesign/eslint-config/config-ts",
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@emotion/babel-plugin": "^11.3.0",
    "@hmudesign/eslint-config": "^1.7.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "babel-loader": "^8.2.2",
    "depcheck": "^1.4.1",
    "eslint": "^7.28.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.2.2",
    "webpack-merge": "^5.8.0"
  }
}
